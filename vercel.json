{
  "version": 2,
  "name": "ai-chatbot-backend",
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/main.py"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "OPENAI_BASE_URL": "https://generativelanguage.googleapis.com/v1beta/openai/",
    "MODEL_NAME": "gemini-2.5-flash"
  }
}